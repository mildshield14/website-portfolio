{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node",
      "config": { "zeroConfig": true }
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)",    "dest": "/backend/api/server.js" },
    { "src": "/(.*)",        "dest": "/src/$1" }
  ]
}
